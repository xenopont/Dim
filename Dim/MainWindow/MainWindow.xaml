<Window x:Class="Dim.MainWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Dim" WindowStyle="None" ResizeMode="NoResize">
    <Grid><!-- Main Window -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"><!-- Title Bar -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel
                Grid.Column="1"
                Height="30"
                Orientation="Horizontal"
                FlowDirection="LeftToRight">
                <Button
                    Background="Transparent"
                    Width="30"
                    Click="MinimizeButtonOnClick">
                    <Path
                        Data="M0,20 L20,20"
                        Stroke="Black"
                        StrokeThickness="2" />
                </Button>
                <Button
                    Background="Transparent"
                    Width="30"
                    Click="MaximizeButtonOnClick">
                    <Path
                        Data="M0,0 L20,0 L20,20 L0,20 Z"
                        Stroke="Black"
                        StrokeThickness="2" />
                </Button>
                <Button
                    Background="Transparent"
                    Width="30"
                    Click="CloseButtonOnClick">
                    <Path
                        Data="M0,0 L20,20 M20,0 L0,20"
                        StrokeThickness="2"
                        Stroke="Black" />
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>